                <div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
                    <div class="page-header pull-left">
                        <div class="page-title">
                                       <%= search_form_for @q, :url => {:action => "index"}, :html => { :class => "form-inline form-group consultar" } do |f| %>
                                 <%= f.search_field :nome_cont, class: "form-control col-sm-12", id: "exampleInputAmount", placeholder: "Nome", onclick: "reapareceDiv()", onBlur: "escondeDiv()", required: "" %>
           
