                <!--BEGIN CONTENT-->
                <div class="page-content">
                    <div id="tab-general">
                   
                        <div class="row mbl">
                            <div class="col-lg-12">

                                <div class="panel panel-violet">
                                <div class="panel-heading">LISTA</div>
                            <div class="panel-body">
                                <table class="table table-hover table-striped">

                                     
                                          <thead>
                                            <tr>
                                              <th>Nome</th>
                                              <th>Hotel</th>
                                              <th>Setor</th>
                                              <th>Transporte</th>
                                              <th>Premio</th>
                                              <th>Check</th>
                                              <th colspan="3"></th>
                                            </tr>
                                          </thead>

                                          <tbody>
                                            <% @checkins.each do |colaborador| %>

                                              <% if colaborador.checkin != "sim" %>
                                                      <tr>
                                                        <td><%= colaborador.nome %></td>
                                                        <td><%= colaborador.hotel %></td>
                                                        <td><%= colaborador.setor %></td>
                                                        <td><%= colaborador.transporte %></td>
                                                        <td><%= colaborador.preimo %></td>
                                                        <td><%= colaborador.checkin %></td>

                                                        <% if colaborador.checkin != "sim" %>
                                                          <td> <button type="submit" class="btn btn-danger" ng-click="ngCheckin(<%= colaborador.id %>)">Check in</button></td>
                                                          <%end%>
                                                        <% if colaborador.checkin == "sim" %>
                                                            <td> <button type="submit" class="btn btn-success" ng-click="ngCheckin(<%= colaborador.id %>)">Checked</button></td>
                                                        <% end %>
                                                          </tr>
                                                <% end %>
                                            <% end %>
                                          </tbody>
                                        </table>
                                   </div>
                                        <br>

                                      
 
         
                            </div>
                            </div>
                   
                        </div>
          
                        
